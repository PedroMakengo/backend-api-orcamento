{
  "compilerOptions": {
    // ... outras opções
    "outDir": "./dist",
    "rootDir": "./src", // ou onde seus arquivos .ts estão
    "baseUrl": "./",
    "paths": {
      "@prisma/client": [
        "./generated/prisma/client"
      ] // Se você estiver usando aliases
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "generated/**/*.ts", // Adicione esta linha
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}