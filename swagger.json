  "components": {
    "schemas": {
      "UtilizadorRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "CreateUtilizadorRequest": {
        "type": "object",
        "required": [
          "nome",
          "email",
          "senha",
          "perfil"
        ],
        "properties": {
          "nome": {
            "type": "string",
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "joao.silva@email.com"
          },
          "senha": {
            "type": "string",
            "example": "$2b$10$hashGeradoAqui"
          },
          "perfil": {
            "type": "string",
            "example": "ADMIN"
          }
        }
      },
      "AuthRequest": {
        "type": "object",
        "required": [
          "email",
          "senha"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "joao.silva@email.com"
          },
          "senha": {
            "type": "string",
            "example": "$2b$10$hashGeradoAqui"
          }
        }
      },
      "ForgotPasswordRequest": {
        "type": "object",
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "joao.silva@email.com"
          }
        }
      },
      "ResetPasswordRequest": {
        "type": "object",
        "required": [
          "token",
          "password"
        ],
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "password": {
            "type": "string",
            "example": "newPassword123"
          }
        }
      },
      "ResponseVerifyToken": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "CreateProductRequest": {
        "type": "object",
        "required": [
          "nome",
          "precoPadrao",
          "unidade",
          "usuarioId"
        ],
        "properties": {
          "nome": {
            "type": "string",
            "example": "Produto Exemplo"
          },
          "descricao": {
            "type": "string",
            "example": "Descrição do produto"
          },
          "precoPadrao": {
            "type": "number",
            "format": "double",
            "example": 199.99
          },
          "unidade": {
            "type": "string",
            "example": "un"
          },
          "usuarioId": {
            "type": "string",
            "example": "a1b2c3d4-1234-5678-9abc-def012345678"
          }
        }
      },
      "ProductResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "nome": {
            "type": "string",
            "example": "Produto Exemplo"
          },
          "descricao": {
            "type": "string",
            "example": "Descrição do produto"
          },
          "precoPadrao": {
            "type": "number",
            "format": "double",
            "example": 199.99
          },
          "unidade": {
            "type": "string",
            "example": "un"
          },
          "usuarioId": {
            "type": "string",
            "example": "a1b2c3d4-1234-5678-9abc-def012345678"
          }
        }
      },
      "CreateClientRequest": {
        "type": "object",
        "required": [
          "nome",
          "email",
          "telefone",
          "usuarioId"
        ],
        "properties": {
          "nome": {
            "type": "string",
            "example": "Cliente Exemplo"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "cliente@exemplo.com"
          },
          "telefone": {
            "type": "string",
            "example": "+258 84 000 0000"
          },
          "endereco": {
            "type": "string",
            "example": "Rua Exemplo, 123, Cidade"
          },
          "usuarioId": {
            "type": "string",
            "example": "a1b2c3d4-1234-5678-9abc-def012345678"
          }
        }
      },
      "ClientResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "nome": {
            "type": "string",
            "example": "Cliente Exemplo"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "cliente@exemplo.com"
          },
          "telefone": {
            "type": "string",
            "example": "+258 84 000 0000"
          },
          "endereco": {
            "type": "string",
            "example": "Rua Exemplo, 123, Cidade"
          },
          "usuarioId": {
            "type": "string",
            "example": "a1b2c3d4-1234-5678-9abc-def012345678"
          }
        }
      },
      "CreateOrcamentoRequest": {
        "type": "object",
        "required": [
          "usuarioId",
          "clienteId",
          "dataValidade",
          "total",
          "itens"
        ],
        "properties": {
          "usuarioId": {
            "type": "string",
            "example": "a1b2c3d4-1234-5678-9abc-def012345678"
          },
          "clienteId": {
            "type": "string",
            "example": "c1d2e3f4-1234-5678-9abc-def012345678"
          },
          "dataValidade": {
            "type": "string",
            "format": "date",
            "example": "2025-12-31"
          },
          "estado": {
            "type": "string",
            "enum": [
              "PENDENTE",
              "ENVIADO",
              "ACEITO"
            ],
            "example": "PENDENTE"
          },
          "total": {
            "type": "number",
            "format": "double",
            "example": 1500.00
          },
          "observacoes": {
            "type": "string",
            "example": "Observações do orçamento"
          },
          "itens": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrcamentoItemRequest"
            }
          }
        }
      },
      "OrcamentoItemRequest": {
        "type": "object",
        "required": [
          "produtoId",
          "quantidade",
          "precoUnit",
          "desconto",
          "totalLinha"
        ],
        "properties": {
